<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :number %>
  <%= text_input f, :number %>
  <%= error_tag f, :number %>

  <%= label f, :client %>
  <%= text_input f, :client %>
  <%= error_tag f, :client %>

  <%= label f, :state %>
  <%= text_input f, :state %>
  <%= error_tag f, :state %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
